// TODO: refine schema, indexes, and constraints before production
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String            @id @default(cuid())
  email           String            @unique
  displayName     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  settings        UserSettings?
  pushTokens      PushToken[]
  devices         Device[]
  plantInstances  PlantInstance[]
  achievements    UserAchievement[]

  // TODO: add auth-related fields (password hash, provider links)
}

model UserSettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  timezone  String?
  locale    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model PushToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model Device {
  id             String           @id @default(cuid())
  ownerId        String?
  hardwareId     String           @unique
  nickname       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  owner          User?            @relation(fields: [ownerId], references: [id])
  plantInstances PlantInstance[]
  readings       SensorReading[]
  alerts         Alert[]

  // TODO: device status fields, firmware version
}

model PlantInstance {
  id          String     @id @default(cuid())
  userId      String
  deviceId    String?
  speciesId   String
  nickname    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id])
  device      Device?    @relation(fields: [deviceId], references: [id])
  readings    SensorReading[]

  // TODO: add care schedule, soil type, etc.
}

model SensorReading {
  id           String     @id @default(cuid())
  deviceId     String
  plantId      String?
  type         String
  value        Float
  recordedAt   DateTime   @default(now())
  createdAt    DateTime   @default(now())

  device       Device     @relation(fields: [deviceId], references: [id])
  plant        PlantInstance? @relation(fields: [plantId], references: [id])

  // TODO: add units, calibration metadata
}

model Alert {
  id          String    @id @default(cuid())
  deviceId    String
  type        String
  message     String?
  createdAt   DateTime  @default(now())
  acknowledged Boolean  @default(false)

  device      Device    @relation(fields: [deviceId], references: [id])

  // TODO: severity levels, auto-resolve rules
}

model Achievement {
  id          String   @id @default(cuid())
  key         String   @unique
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       UserAchievement[]
}

model UserAchievement {
  id             String       @id @default(cuid())
  userId         String
  achievementId  String
  unlockedAt     DateTime     @default(now())

  user           User         @relation(fields: [userId], references: [id])
  achievement    Achievement  @relation(fields: [achievementId], references: [id])
}
// Connected Plant Pot Platform Prisma Schema
// PostgreSQL datasource and Prisma Client generator
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enums
enum PlantStatus {
  ACTIVE
  REMOVED
  DEAD
}

enum AlertType {
  WATER_NEEDED
  LIGHT_TOO_LOW
  LIGHT_TOO_HIGH
  BATTERY_LOW
  OFFLINE
  OTHER
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

// Users of the platform
model User {
  id              String           @id @default(uuid())
  email           String           @unique
  passwordHash    String
  emailVerified   Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  settings        UserSettings?
  devices         Device[]
  pushTokens      PushToken[]
  achievements    UserAchievement[]
}

// Per-user settings and preferences
model UserSettings {
  id                        String   @id @default(uuid())
  userId                    String   @unique
  displayName               String?
  language                  String?  // e.g. "fr", "en"
  timezone                  String?
  notificationsEmailEnabled Boolean  @default(true)
  notificationsPushEnabled  Boolean  @default(true)

  user                      User     @relation(fields: [userId], references: [id])
}

// Push notification token registrations
model PushToken {
  id         String   @id @default(uuid())
  userId     String
  deviceType String   // ANDROID, WEB, etc.
  token      String
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}

// IoT device representing a connected plant pot
model Device {
  id                String           @id @default(uuid())
  deviceUid         String           @unique
  deviceSecretHash  String
  ownerId           String
  name              String
  lastSeenAt        DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  owner             User             @relation(fields: [ownerId], references: [id])
  plantInstances    PlantInstance[]
  sensorReadings    SensorReading[]
  alerts            Alert[]
}

// A planted plant instance on a device
model PlantInstance {
  id           String      @id @default(uuid())
  deviceId     String
  speciesId    Int         // Logical FK to plant species in separate wiki DB/schema
  nickname     String?
  plantedAt    DateTime
  status       PlantStatus
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  device       Device      @relation(fields: [deviceId], references: [id])
  alerts       Alert[]
}

// Time-series measurements from a device's sensors
model SensorReading {
  id           String    @id @default(uuid())
  deviceId     String
  timestamp    DateTime
  soilMoisture Float?
  lightLevel   Float?
  temperature  Float?
  createdAt    DateTime  @default(now())

  device       Device    @relation(fields: [deviceId], references: [id])
}

// Alerts generated by devices and optionally associated with a plant instance
model Alert {
  id               String        @id @default(uuid())
  deviceId         String
  plantInstanceId  String?
  type             AlertType
  severity         AlertSeverity
  createdAt        DateTime      @default(now())
  resolvedAt       DateTime?

  device           Device        @relation(fields: [deviceId], references: [id])
  plantInstance    PlantInstance? @relation(fields: [plantInstanceId], references: [id])
}

// Dictionary of achievements available in the platform
model Achievement {
  id              Int              @id @default(autoincrement())
  code            String           @unique
  title           String
  description     String
  category        String?
  icon            String?
  createdAt       DateTime         @default(now())

  userAchievements UserAchievement[]
}

// Achievements unlocked by users
model UserAchievement {
  id             String       @id @default(uuid())
  userId         String
  achievementId  Int
  unlockedAt     DateTime     @default(now())

  user           User         @relation(fields: [userId], references: [id])
  achievement    Achievement  @relation(fields: [achievementId], references: [id])
}

