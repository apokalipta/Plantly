// Connected Plant Pot Platform Prisma Schema
// PostgreSQL datasource and Prisma Client generator
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enums
enum PlantStatus {
  ACTIVE
  REMOVED
  DEAD
}

enum AlertType {
  WATER_NEEDED
  LIGHT_TOO_LOW
  LIGHT_TOO_HIGH
  BATTERY_LOW
  OFFLINE
  OTHER
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

// Users of the platform
model User {
  id              String           @id @default(uuid())
  email           String           @unique
  passwordHash    String
  emailVerified   Boolean          @default(false)
  tokenVersion    Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  settings        UserSettings?
  devices         Device[]
  pushTokens      PushToken[]
  achievements    UserAchievement[]
}

// Per-user settings and preferences
model UserSettings {
  id                        String   @id @default(uuid())
  userId                    String   @unique
  displayName               String?
  language                  String?  // e.g. "fr", "en"
  timezone                  String?
  notificationsEmailEnabled Boolean  @default(true)
  notificationsPushEnabled  Boolean  @default(true)

  user                      User     @relation(fields: [userId], references: [id])
}

// Push notification token registrations
model PushToken {
  id         String   @id @default(uuid())
  userId     String
  deviceType String   // ANDROID, WEB, etc.
  token      String
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}

// IoT device representing a connected plant pot
model Device {
  id                String           @id @default(uuid())
  deviceUid         String           @unique
  deviceSecretHash  String
  ownerId           String?
  name              String
  lastSeenAt        DateTime?
  pairingCode       String?          @unique
  pairedAt          DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  owner             User?            @relation(fields: [ownerId], references: [id])
  plantInstances    PlantInstance[]
  sensorReadings    SensorReading[]
  alerts            Alert[]
}

// A planted plant instance on a device
model PlantInstance {
  id           String      @id @default(uuid())
  deviceId     String
  speciesId    Int         // Logical FK to plant species in separate wiki DB/schema
  nickname     String?
  plantedAt    DateTime
  status       PlantStatus
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  device       Device      @relation(fields: [deviceId], references: [id])
  alerts       Alert[]
}

// Time-series measurements from a device's sensors
model SensorReading {
  id           String    @id @default(uuid())
  deviceId     String
  timestamp    DateTime
  soilMoisture Float?
  lightLevel   Float?
  temperature  Float?
  createdAt    DateTime  @default(now())

  device       Device    @relation(fields: [deviceId], references: [id])
}

// Alerts generated by devices and optionally associated with a plant instance
model Alert {
  id               String        @id @default(uuid())
  deviceId         String
  plantInstanceId  String?
  type             AlertType
  severity         AlertSeverity
  createdAt        DateTime      @default(now())
  resolvedAt       DateTime?

  device           Device        @relation(fields: [deviceId], references: [id])
  plantInstance    PlantInstance? @relation(fields: [plantInstanceId], references: [id])
}

// Dictionary of achievements available in the platform
model Achievement {
  id              Int              @id @default(autoincrement())
  code            String           @unique
  title           String
  description     String
  category        String?
  icon            String?
  createdAt       DateTime         @default(now())

  userAchievements UserAchievement[]
}

// Achievements unlocked by users
model UserAchievement {
  id             String       @id @default(uuid())
  userId         String
  achievementId  Int
  unlockedAt     DateTime     @default(now())

  user           User         @relation(fields: [userId], references: [id])
  achievement    Achievement  @relation(fields: [achievementId], references: [id])
}

model PlantSpecies {
  id               Int          @id @default(autoincrement())
  commonName       String       @unique
  latinName        String?
  descriptionShort String?
  imageUrl         String?

  care             PlantCare?
}

model PlantCare {
  id                        Int           @id @default(autoincrement())
  species                   PlantSpecies  @relation(fields: [speciesId], references: [id])
  speciesId                 Int           @unique

  minMoisture               Float?
  maxMoisture               Float?
  minLight                  Int?
  maxLight                  Int?
  wateringIntervalDays      Int?
  recommendedTemperatureMin Float?
  recommendedTemperatureMax Float?
  careTips                  String?
}
